      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
            News
          </h1>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <% if (username != null) { %> <!-- Условие, если пользователь неавторизованн то добавление не показывается -->
          <form action="/news/add" method="POST">
            <div class="form-group" style="width: 50%;">
              <input
              type="text"
              name="TitleNews"
              class="form-control"
              id="exampleInputLogin"
              placeholder="Enter news title"
              />
              <br/>
              <input
              type="text"
              name="TextNews"
              class="form-control"
              id="exampleInputLogin"
              placeholder="Enter news text"
              />
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Add news</button>
            </div>
          </form>
          <% } %>
          <form action="/news/search" method="POST">
            <div class="form-group" style="width: 50%; float: left; padding-right: 10px;">
              <input
                type="text"
                name="fNews"
                class="form-control"
                id="exampleInputLogin"
                placeholder="Enter news"
              />
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Search</button>    
            </div>
          </form>
          <form action="/news/sort" method="POST">
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Sort</button>
            </div>
          </form>  
 
        </div>
      </div class="row">
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Title</th>
                      <th>Text</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% news.forEach((item) => {%>
                    <tr>
                      <td><%= item.id %></td>
                      <td><%= item.title %></td>
                      <td><%= item.text %></td>
                    </tr>
                    <% })%>
                  </tbody>
                </table>
              </div>

          </div>
        </div>
      </div>
